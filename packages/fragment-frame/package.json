{
	"name": "@zomme/fragment-frame",
	"version": "1.0.0",
	"type": "module",
	"main": "./dist/fragment-frame.js",
	"types": "./dist/fragment-frame.d.ts",
	"exports": {
		".": "./dist/fragment-frame.js",
		"./constants": "./dist/constants.js",
		"./sdk": "./dist/sdk.js",
		"./types": "./dist/types.js"
	},
	"scripts": {
		"build": "bun build src/*.ts --outdir dist --target browser --format esm && tsc --emitDeclarationOnly",
		"dev": "bun build src/*.ts --outdir dist --target browser --format esm --watch",
		"lint:format": "bun biome check --write",
		"lint:types": "bun tsc --noEmit",
		"lint": "bun run lint:format && bun run lint:types",
		"test": "bun test --preload ./tests/test-setup.ts"
	},
	"dependencies": {
		"flatted": "^3.3.1"
	},
	"devDependencies": {
		"@happy-dom/global-registrator": "^20.3.0",
		"happy-dom": "^20.3.0",
		"typescript": "^5.3.3"
	}
}
