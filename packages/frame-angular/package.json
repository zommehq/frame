{
	"name": "@zomme/frame-angular",
	"version": "1.2.0",
	"description": "Angular wrapper for @zomme/frame - components and services for micro-frontend integration",
	"license": "MIT",
	"author": "Zomme",
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/djalmajr/frame.git",
		"directory": "packages/frame-angular"
	},
	"keywords": [
		"micro-frontend",
		"microfrontend",
		"angular",
		"iframe",
		"postmessage",
		"web-component"
	],
	"sideEffects": false,
	"module": "./dist/fesm2022/zomme-frame-angular.mjs",
	"types": "./dist/types/zomme-frame-angular.d.ts",
	"exports": {
		".": {
			"types": "./dist/types/zomme-frame-angular.d.ts",
			"esm2022": "./dist/fesm2022/zomme-frame-angular.mjs",
			"esm": "./dist/fesm2022/zomme-frame-angular.mjs",
			"default": "./dist/fesm2022/zomme-frame-angular.mjs"
		}
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "ng-packagr -p ng-package.json",
		"dev": "ng-packagr -p ng-package.json --watch",
		"lint:format": "bun biome check --write",
		"lint:types": "bun tsc --noEmit",
		"lint": "bun run lint:format && bun run lint:types"
	},
	"peerDependencies": {
		"@angular/core": "^21.0.0",
		"@angular/router": "^21.0.0",
		"@zomme/frame": "^1.0.0",
		"rxjs": "^7.0.0"
	},
	"devDependencies": {
		"@angular/compiler": "^21.1.0",
		"@angular/compiler-cli": "^21.1.0",
		"@angular/core": "^21.0.0",
		"@angular/router": "^21.0.0",
		"ng-packagr": "^21.1.0",
		"rxjs": "^7.0.0",
		"tslib": "^2.8.1",
		"typescript": "^5.3.3"
	}
}
