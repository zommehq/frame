{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./out-tsc/lib",
		"declaration": true,
		"declarationMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "ES2022",
		"target": "ES2022",
		"lib": ["ES2022", "DOM"],
		"paths": {
			"@zomme/frame": ["../frame/dist/frame.d.ts"],
			"@zomme/frame/sdk": ["../frame/dist/sdk.d.ts"],
			"@zomme/frame/types": ["../frame/dist/types.d.ts"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "out-tsc", "**/*.spec.ts"],
	"angularCompilerOptions": {
		"compilationMode": "partial",
		"strictInjectionParameters": true,
		"strictInputAccessModifiers": true,
		"strictTemplates": true
	}
}
