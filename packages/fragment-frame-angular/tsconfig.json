{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "ESNext",
		"target": "ES2022",
		"lib": ["ES2022", "DOM"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
